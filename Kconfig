config ARDUINO_CORE
	bool "ARDUINO_CORE"
	imply CPP
	imply GPIO
	imply I2C
	imply NEWLIB_LIBC_FLOAT_PRINTF
	imply CBPRINTF_FP_SUPPORT
	imply RING_BUFFER
	select UART_INTERRUPT_DRIVEN
	select LLEXT
	select MODULES

if ARDUINO_CORE

choice LLEXT_BINARY_TYPE
	default LLEXT_TYPE_ELF_RELOCATABLE
endchoice

config QEMU_ICOUNT
	bool "QEMU icount mode"
	default n
	depends on QEMU_TARGET

config ARDUINO_CORE_SERIAL_BUFFER_SIZE
	int "Buffer size for Arduino Serial API"
	default 64

config ARDUINO_ENTRY
	bool "Provide arduino setup and loop entry points"
	default y

endif
